<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BasicFunctionality.Avalonia.UserControls.SliderEditor">
	<StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
		<DockPanel HorizontalAlignment="Stretch">
			<TextBlock HorizontalAlignment="Left" DockPanel.Dock="Left" Text="{Binding Name}"/>
			<TextBlock HorizontalAlignment="Right" DockPanel.Dock="Right" Text="{Binding Value, StringFormat=\{0:00.0\}}}"/>
		</DockPanel>
		<Slider Value="{Binding Value}"		   
				Maximum="{Binding InterfaceDefinition.Max, FallbackValue=100}"
				Minimum="{Binding InterfaceDefinition.Min, FallbackValue=0}"
				Ticks="{Binding InterfaceDefinition.Increment, FallbackValue=1}"/>
	</StackPanel>
</UserControl>
