<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BasicFunctionality.Avalonia.UserControls.BoolEditor">
	<Grid HorizontalAlignment="Stretch">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TextBlock Text="{Binding Name}" Grid.Column="0" VerticalAlignment="Center"/>
		<ToggleButton HorizontalAlignment="Stretch" Margin="5,0,0,0" VerticalAlignment="Center" Grid.Column="1" IsEnabled="{Binding !Value}" IsChecked="{Binding !Value}" Content="True"/>
		<ToggleButton HorizontalAlignment="Stretch" Margin="0,0,5,0" VerticalAlignment="Center" Grid.Column="2" IsEnabled="{Binding Value}" IsChecked="{Binding Value}" Content="False"/>
	</Grid>
</UserControl>
