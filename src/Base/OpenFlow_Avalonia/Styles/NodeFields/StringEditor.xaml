<Styles
  xmlns = "https://github.com/avaloniaui"
  xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:OFPF ="clr-namespace:OpenFlow_PluginFramework.NodeSystem;assembly=OpenFlow_PluginFramework">

  <Styles.Resources>
    <DataTemplate DataType="OFPF:DisplayValue" x:Key="StringEditor">
      <StackPanel Orientation="Horizontal" Spacing="4">
        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Value}" VerticalAlignment="Center"/>
      </StackPanel>
    </DataTemplate>
  </Styles.Resources>
</Styles>