<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<TargetFramework>net7.0</TargetFramework>
	<Nullable>enable</Nullable>
	<ImplicitUsings>enable</ImplicitUsings>
	<Nullable>enable</Nullable>
	<Title>Project: Laminar Plugin Framework</Title>
	<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	<Version>$(VersionPrefix)</Version>
	<Authors>Adam Wilkinson</Authors>
	<RepositoryUrl>https://github.com/Adam-Wilkinson/Project-Laminar</RepositoryUrl>
	<RepositoryType>git</RepositoryType>
	<PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
	<PackageLicenseFile>COPYING.txt</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>Laminar.Implementation</_Parameter1>
    </AssemblyAttribute>
</ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\COPYING.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Laminar.PluginFramework.SourceGeneration" Version="1.0.0" />
  </ItemGroup>
</Project>
